{
    "name": "3z/notion",
    "description": "SDK for Notion API",
    "keywords": [
        "HelixSleep",
        "Helix",
        "notion"
    ],
    "homepage": "https://github.com/HelixSleep/notion",
    "license": "MIT",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Helix\\Notion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Helix\\Notion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
